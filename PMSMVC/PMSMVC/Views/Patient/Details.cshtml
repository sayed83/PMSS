@model PMSMVC.Models.Patient

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <table class="table">
                <tr class="detail-row open">
                    <td>
                        <div class="table-detail">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 style="text-align:center">Patient Details</h3>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <img width="136" height="150" class="thumbnail inline no-margin-bottom" alt="Domain Owner's Avatar" src="~/assets/images/avatars/profile-pic.jpg" />
                                        <br />
                                        <div class="width-80 label label-info label-xlg arrowed-in arrowed-in-right">
                                            <div class="inline position-relative">
                                                <a class="user-title-label" href="#">
                                                    <i class="ace-icon fa fa-circle light-green"></i>
                                                    &nbsp;
                                                    <span class="white">@Html.DisplayFor(model => model.PatientName)</span>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="space visible-xs"></div>

                                    <div class="profile-user-info profile-user-info-striped">
                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Patient ID </div>

                                            <div class="profile-info-value">
                                                <span>@Html.DisplayFor(model => model.PatCardID)</span>
                                            </div>
                                        </div>

                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Age </div>

                                            <div class="profile-info-value">
                                                <span>@Html.DisplayFor(model => model.Age)</span>
                                            </div>
                                        </div>

                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Contact Number </div>

                                            <div class="profile-info-value">
                                                <span>@Html.DisplayFor(model => model.ContactNumber)</span>
                                            </div>
                                        </div>

                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Admission Date </div>

                                            <div class="profile-info-value">
                                                <span>@Html.DisplayFor(model => model.AdmissionDate)</span>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model =>model.PatientID)
                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> Room NO </div>

                                            <div class="profile-info-value">
                                                <span>@Html.DisplayFor(model => model.Room.RoomNO)</span>
                                            </div>
                                        </div>

                                        <div class="profile-info-row">
                                            <div class="profile-info-name"> &nbsp; </div>

                                            <div class="profile-info-value">
                                                @using (Html.BeginForm())
                                                {
                                                    @Html.AntiForgeryToken()

                                                    <div class="form-action no-color">
                                                        @Html.ActionLink("Edit", "Edit", new { id = Model.PatientID }) | 
                                                        @Html.ActionLink("Back to List", "Index") | 
                                                        <button class="btn btn-info" onclick="javascript:window.print();"><i class="fa fa-print"></i> Print</button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>